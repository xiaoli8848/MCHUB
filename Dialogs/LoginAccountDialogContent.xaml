<Page
    x:Class="MCHUB.LoginAccountDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MCHUB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <ComboBox x:Name="combobox" Header="账户类型" SelectedIndex="0" x:FieldModifier="public">
            <x:String>离线账户</x:String>
            <x:String>Mojang账户</x:String>
            <x:String>微软账户</x:String>
        </ComboBox>
        <TextBox x:Name="username" Header="账户名：" x:FieldModifier="public"/>
        <PasswordBox x:Name="password" Header="密码：" Visibility="Collapsed" x:FieldModifier="public"/>
    </StackPanel>
</Page>
